<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="344dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="303dp">

            <TextView
                android:id="@+id/ps"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="Project :" />


            <TextView
                android:id="@+id/prg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/ps"
                android:paddingStart="10dp"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/prg6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prg"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/parts"
                android:paddingStart="10dp"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/prg3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prg6"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/qty"
                android:paddingStart="10dp"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/prg4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prg3"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/am"
                android:paddingStart="10dp"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/prg5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prg4"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/chalan"
                android:paddingStart="10dp"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/prg7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prg8"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/startdate2"
                android:focusableInTouchMode="false"
                android:paddingStart="10dp"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/prg8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prg5"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/startdate"
                android:focusableInTouchMode="false"
                android:paddingStart="10dp"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/parts"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ps"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="Description :" />

            <TextView
                android:id="@+id/qty"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parts"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="Start Date :" />


            <TextView
                android:id="@+id/am"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qty"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="End Date :" />

            <TextView
                android:id="@+id/chalan"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/am"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="Chalan no. :" />

            <TextView
                android:id="@+id/startdate"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chalan"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="Amount :" />

            <TextView
                android:id="@+id/startdate2"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/startdate"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="Is Active :" />


            <Button
                android:id="@+id/part"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/startdate2"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/by_round"
                android:text="View Parts :" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prg7"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:clickable="true"
                android:elevation="16dp"
                android:focusable="true"
                android:src="@drawable/ic_add"
                android:visibility="visible"
                tools:ignore="VectorDrawableCompat" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:layout_below="@+id/prg7"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="145dp"
                android:clickable="true"
                android:elevation="16dp"
                android:focusable="true"
                android:src="@drawable/ic_edit"
                android:visibility="visible"
                tools:ignore="VectorDrawableCompat" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>